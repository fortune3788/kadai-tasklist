<% if tasks.any? %>
  <ul>
    <% tasks.each do |task| %>
      <li>
        <div>
          <div>
            <%= task.user.name %>
          </div>
          <div>
            <p><%= task.status %></p>
          </div>
          <div>
            <p><%= task.content %></p>
          </div>
          <div>
            <% if current_user == task.user %>
              <%= link_to "Delete", task, method: :delete, data: { cofirm: "You sure?" } %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_nav(@pagy) %>
<% end %>